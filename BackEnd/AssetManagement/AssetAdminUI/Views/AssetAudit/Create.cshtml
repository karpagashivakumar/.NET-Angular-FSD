@model AssetAdminUI.Models.AssetAuditCreate
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Create Audit";
}

<div class="container mt-4">
    <h3 class="text-primary mb-4 animate__animated animate__fadeInDown">➕ Create New Audit</h3>

    <form asp-action="Create" method="post" class="card p-4 shadow-sm border rounded-4 animate__animated animate__fadeIn">
        <div class="mb-3">
            <label asp-for="AssetId" class="form-label">Asset ID</label>
            <input asp-for="AssetId" class="form-control" placeholder="Enter Asset ID" />
            <span asp-validation-for="AssetId" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="EmployeeId" class="form-label">Employee ID</label>
            <input asp-for="EmployeeId" class="form-control" placeholder="Enter Employee ID" />
            <span asp-validation-for="EmployeeId" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="AuditNotes" class="form-label">Audit Notes</label>
            <textarea asp-for="AuditNotes" class="form-control" placeholder="Add any audit notes here..."></textarea>
            <span asp-validation-for="AuditNotes" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-end gap-2 mt-4">
            <a asp-action="List" class="btn btn-outline-secondary"><i class="bi bi-arrow-left"></i> Back</a>
            <button type="submit" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Create Audit</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
